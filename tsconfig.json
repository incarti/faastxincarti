{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "build/tsc",
    "paths": {
      "Pkg": ["package.json"],
      "Src/*": ["src/*"],
      "Src": ["src"],
      "Res/*": ["res/*"],
      "Res": ["res"],
      "Test/*": ["test/*"],
      "Test": ["test"],
      "Img/*": ["res/img/*"],
      "Img": ["res/img"],
      "Mock/*": ["test/mock/*"],
      "Mock": ["test/mock"],
      "Config/*": ["src/config/*"],
      "Config": ["src/config"],
      "Utilities/*": ["src/utilities/*"],
      "Utilities": ["src/utilities"],
      "Services/*": ["src/services/*"],
      "Services": ["src/services"],
      "Site/*": ["src/site/*"],
      "Site": ["src/site"],
      "App/*": ["src/app/*"],
      "App": ["src/app"],
      "Components/*": ["src/app/components/*"],
      "Components": ["src/app/components"],
      "Styles/*": ["src/app/styles/*"],
      "Styles": ["src/app/styles"],
      "Actions/*": ["src/app/actions/*"],
      "Actions": ["src/app/actions"],
      "Hoc/*": ["src/app/hoc/*"],
      "Hoc": ["src/app/hoc"],
      "Selectors/*": ["src/app/selectors/*"],
      "Selectors": ["src/app/selectors"],
      "Reducers/*": ["src/app/reducers/*"],
      "Reducers": ["src/app/reducers"],
      "Routes/*": ["src/app/routes/*"],
      "Routes": ["src/app/routes"],
      "Common/*": ["src/common/*"],
      "Common": ["src/common"],
      "Log/*": ["src/utilities/log/*"],
      "Log": ["src/utilities/log"],
      "Types/*": ["src/types/*"],
      "Types": ["src/types"],
      "#/*": ["src/*", "./*"],
      "#": ["src", "."]
    },
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ]
  },
  "include": [
    "src"
  ]
}
